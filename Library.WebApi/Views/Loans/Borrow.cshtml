@model Library.WebApi.Models.BorrowViewModel
@using System

@{
    ViewData["Title"] = "Emprunter un livre";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-3">Emprunter un livre</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <div class="mb-3">
            <label class="form-label">Site</label>
            <select asp-for="SiteId" asp-items="Model.Sites" class="form-select"
                    onchange="if(this.value) window.location='@Url.Action("Borrow", "Loans")?siteId=' + this.value;">
                <option value="">-- Sélectionner un site --</option>
            </select>
        </div>


        @if (Model.SiteId != Guid.Empty)
        {
            <hr />
            <form asp-action="Borrow" method="post">
                <input type="hidden" asp-for="SiteId" />

                <div class="mb-3">
                    <label class="form-label">Emprunteur</label>
                    <select asp-for="UserId" asp-items="Model.Users" class="form-select">
                        <option value="">-- Sélectionner un utilisateur --</option>
                    </select>
                    <span asp-validation-for="UserId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Livre</label>
                    <select asp-for="BookId" asp-items="Model.Books" class="form-select">
                        <option value="">-- Sélectionner un livre disponible --</option>
                    </select>
                    <span asp-validation-for="BookId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary">Emprunter</button>
            </form>
        }
        else
        {
            <p class="text-muted">Choisissez d'abord un site pour voir les livres disponibles et les emprunter.</p>
        }

        <div class="mt-3">
            <a href="/Home/Index" class="btn btn-link">Retour à l'accueil</a>
        </div>
    </div>
</div>

@model Library.WebApi.Models.BorrowViewModel

@{
    ViewData["Title"] = "Emprunter un livre";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-3">Emprunter un livre</h2>

        <form asp-action="Borrow" method="post">
            <div class="mb-3">
                <label class="form-label">Utilisateur</label>
                <select asp-for="UserId" asp-items="Model.Users" class="form-select">
                    <option value="">-- Sélectionner un utilisateur --</option>
                </select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Livre</label>
                <select asp-for="BookId" asp-items="Model.Books" class="form-select">
                    <option value="">-- Sélectionner un livre --</option>
                </select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Site</label>
                <select asp-for="SiteId" asp-items="Model.Sites" class="form-select">
                    <option value="">-- Sélectionner un site --</option>
                </select>
                <span asp-validation-for="SiteId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Emprunter</button>
        </form>

        <div class="mt-3">
            <a href="/Home/Index" class="btn btn-link">Retour à l'accueil</a>
        </div>
    </div>
</div>

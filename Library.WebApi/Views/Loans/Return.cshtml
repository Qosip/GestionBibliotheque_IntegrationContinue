@model Library.WebApi.Models.ReturnViewModel
@using System

@{
    ViewData["Title"] = "Retourner un livre";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-3">Retourner un livre</h2>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <!-- 1. Choix de l'utilisateur -->
        <div class="mb-3">
            <label class="form-label">Utilisateur</label>

            <select asp-for="UserId"
                    asp-items="Model.Users"
                    class="form-select"
                    onchange="if(this.value) window.location='@Url.Action("Return", "Loans")?userId=' + this.value;">
                <option value="">-- Sélectionner un utilisateur --</option>
            </select>
        </div>

        @if (Model.UserId != Guid.Empty)
        {
            if (!Model.Loans.Any())
            {
                <p class="text-muted">
                    Cet utilisateur n’a aucun prêt en cours.
                </p>
            }
            else
            {
                <hr />

                <form asp-action="Return" method="post">
                    <input type="hidden" asp-for="UserId" />

                    <div class="mb-3">
                        <label class="form-label">Livre emprunté</label>

                        <select asp-for="LoanId"
                                asp-items="Model.Loans"
                                class="form-select">
                            <option value="">-- Sélectionner un prêt à retourner --</option>
                        </select>

                        <span asp-validation-for="LoanId" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary">Valider le retour</button>
                </form>
            }
        }
        else
        {
            <p class="text-muted">Sélectionnez un utilisateur pour voir ses prêts en cours.</p>
        }

        <div class="mt-3">
            <a href="/Home/Index" class="btn btn-link">Retour à l'accueil</a>
        </div>
    </div>
</div>

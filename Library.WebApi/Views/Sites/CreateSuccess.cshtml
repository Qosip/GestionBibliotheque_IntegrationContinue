@model Library.Application.CreateSiteResult

@{
    ViewData["Title"] = "Site créé";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-3">Bibliothèque créée</h2>

        <p>Identifiant du site :</p>
        <pre class="bg-light p-2">@Model.SiteId</pre>

        <a href="/Home/Index" class="btn btn-primary">Retour à l'accueil</a>
        <a href="/Sites/Create" class="btn btn-outline-secondary ms-2">Créer un autre site</a>
    </div>
</div>

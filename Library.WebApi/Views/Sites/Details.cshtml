@model Library.WebApi.Models.SiteDetailsViewModel

@{
    ViewData["Title"] = "Détail site";
}

<div class="card mb-3">
    <div class="card-body">
        <h2 class="card-title mb-3">Site : @Model.Name</h2>

        <dl class="row">
            <dt class="col-sm-3">Id</dt>
            <dd class="col-sm-9"><code>@Model.SiteId</code></dd>

            <dt class="col-sm-3">Adresse</dt>
            <dd class="col-sm-9">@Model.Address</dd>
        </dl>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <h3 class="card-title mb-3">Livres présents sur ce site</h3>

        @if (!Model.Books.Any())
        {
            <p class="text-muted">Aucun exemplaire enregistré sur ce site.</p>
        }
        else
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Exemplaires totaux</th>
                        <th>Disponibles</th>
                        <th>Empruntés</th>
                        <th>En transfert</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var b in Model.Books)
                    {
                        <tr>
                            <td>@b.Title</td>
                            <td>@b.TotalCopies</td>
                            <td>@b.AvailableCopies</td>
                            <td>@b.BorrowedCopies</td>
                            <td>@b.InTransferCopies</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <a asp-action="Index" class="btn btn-link">Retour à la liste des sites</a>
    </div>
</div>

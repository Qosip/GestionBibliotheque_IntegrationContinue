@using Microsoft.AspNetCore.Mvc.Rendering
@model Library.WebApi.Models.TransferRequestViewModel

@{
    ViewData["Title"] = "Demander un transfert";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-3">Demander un transfert d'exemplaire</h2>

        <p class="text-muted">
            Sélectionnez le livre, le site source et le site cible.
        </p>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="Request" method="post">
            <div class="mb-3">
                <label asp-for="BookId" class="form-label">Livre</label>
                <select asp-for="BookId" class="form-control" asp-items="Model.Books">
                    <option value="">-- Sélectionner un livre --</option>
                </select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Quantity" class="form-label">Nombre d'exemplaires</label>
                <input asp-for="Quantity" type="number" min="1" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>


            <div class="mb-3">
                <label asp-for="SourceSiteId" class="form-label">Site source</label>
                <select asp-for="SourceSiteId" class="form-control" asp-items="Model.Sites">
                    <option value="">-- Sélectionner un site source --</option>
                </select>
                <span asp-validation-for="SourceSiteId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TargetSiteId" class="form-label">Site cible</label>
                <select asp-for="TargetSiteId" class="form-control" asp-items="Model.Sites">
                    <option value="">-- Sélectionner un site cible --</option>
                </select>
                <span asp-validation-for="TargetSiteId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Demander le transfert</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-link">Retour</a>
        </form>
    </div>
</div>

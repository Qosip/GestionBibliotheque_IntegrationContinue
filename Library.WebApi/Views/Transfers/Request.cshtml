@model Library.Application.RequestTransferCommand

@{
    ViewData["Title"] = "Demander un transfert";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-3">Demander un transfert d'exemplaire</h2>

        <p class="text-muted">
            Renseigne le BookId, le site source et le site cible.
        </p>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <div>@error.ErrorMessage</div>
                }
            </div>
        }

        <form asp-action="Request" method="post">
            <div class="mb-3">
                <label asp-for="BookId" class="form-label">BookId</label>
                <input asp-for="BookId" class="form-control" />
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SourceSiteId" class="form-label">Site source</label>
                <input asp-for="SourceSiteId" class="form-control" />
                <span asp-validation-for="SourceSiteId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="TargetSiteId" class="form-label">Site cible</label>
                <input asp-for="TargetSiteId" class="form-control" />
                <span asp-validation-for="TargetSiteId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Demander le transfert</button>
            <a href="/Home/Index" class="btn btn-link">Retour</a>
        </form>
    </div>
</div>

@model Library.WebApi.Models.TransferRequestViewModel

@{
    ViewData["Title"] = "Demander un transfert";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-3">Demander un transfert d'exemplaire</h2>

        <form asp-action="Request" method="post">
            <div class="mb-3">
                <label class="form-label">Livre</label>
                <select asp-for="BookId" asp-items="Model.Books" class="form-select">
                    <option value="">-- Sélectionner un livre --</option>
                </select>
                <span asp-validation-for="BookId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Site source</label>
                <select asp-for="SourceSiteId" asp-items="Model.Sites" class="form-select">
                    <option value="">-- Sélectionner le site source --</option>
                </select>
                <span asp-validation-for="SourceSiteId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Site cible</label>
                <select asp-for="TargetSiteId" asp-items="Model.Sites" class="form-select">
                    <option value="">-- Sélectionner le site cible --</option>
                </select>
                <span asp-validation-for="TargetSiteId" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Demander le transfert</button>
        </form>

        <div class="mt-3">
            <a href="/Home/Index" class="btn btn-link">Retour à l'accueil</a>
        </div>
    </div>
</div>

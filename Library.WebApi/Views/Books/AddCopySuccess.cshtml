@model Library.Application.AddBookCopyResult

@{
    ViewData["Title"] = "Exemplaire créé";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-3">Exemplaire créé</h2>

        <p>Identifiant de l’exemplaire :</p>
        <pre class="bg-light p-2">@Model.BookCopyId</pre>

        <a href="/Home/Index" class="btn btn-primary">Retour à l'accueil</a>
        <a href="/Books/AddCopy" class="btn btn-outline-secondary ms-2">Ajouter un autre exemplaire</a>
    </div>
</div>

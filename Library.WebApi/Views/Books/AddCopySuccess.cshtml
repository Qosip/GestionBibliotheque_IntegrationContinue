@model Library.Application.AddBookCopyResult

@{
    ViewData["Title"] = "Exemplaire créé";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-3">Exemplaire créé</h2>

        <p>Identifiant exemplaire : <strong>@Model.BookCopyId</strong></p>

        <div class="mt-3">
            <a href="/Books/AddCopy" class="btn btn-secondary me-2">Ajouter un autre exemplaire</a>
            <a href="/Home/Index" class="btn btn-link">Retour à l'accueil</a>
        </div>
    </div>
</div>

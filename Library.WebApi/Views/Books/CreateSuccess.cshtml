@{
    ViewData["Title"] = "Livre créé";
    var bookId = (Guid)ViewBag.BookId;
    var copyId = (Guid)ViewBag.BookCopyId;
    var siteId = (Guid)ViewBag.SiteId;
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-3">Livre et exemplaire créés</h2>

        <p>Identifiant du livre :</p>
        <pre class="bg-light p-2">@bookId</pre>

        <p>Identifiant du premier exemplaire :</p>
        <pre class="bg-light p-2">@copyId</pre>

        <p>Site :</p>
        <pre class="bg-light p-2">@siteId</pre>

        <a href="/Home/Index" class="btn btn-primary">Retour à l'accueil</a>
        <a href="/Books/Create" class="btn btn-outline-secondary ms-2">Créer un autre livre</a>
    </div>
</div>

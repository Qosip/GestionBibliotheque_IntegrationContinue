@using Library.Application.Results
@model RegisterUserResult

@{
    ViewData["Title"] = "Utilisateur créé";
}

<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-3">Utilisateur créé</h2>

        <p>Identifiant utilisateur :</p>
        <pre class="bg-light p-2">@Model.UserId</pre>

        <a href="/Home/Index" class="btn btn-primary">Retour à l'accueil</a>
        <a href="/Users/Create" class="btn btn-outline-secondary ms-2">Créer un autre utilisateur</a>
    </div>
</div>
